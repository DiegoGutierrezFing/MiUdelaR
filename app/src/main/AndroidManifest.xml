<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="diego.com.miudelar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="diego.com.miudelar.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="diego.com.miudelar.LoginActivity"
            android:label="@string/title_activity_login">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <activity
            android:name="diego.com.miudelar.InscripcionACurso"
            android:label="Inscripcion a curso">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diego.com.miudelar.MainActivity" />
        </activity>

        <activity
            android:name="diego.com.miudelar.InscripcionACarrera"
            android:label="Inscripcion a carrera">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diego.com.miudelar.MainActivity" />
        </activity>

        <activity
            android:name="diego.com.miudelar.InscripcionAExamen"
            android:label="Inscripcion a examen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diego.com.miudelar.MainActivity" />
        </activity>

        <activity
            android:name="diego.com.miudelar.ResultadoCursos"
            android:label="Consultar calificaciones de cursos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diego.com.miudelar.MainActivity" />
        </activity>

        <activity
            android:name="diego.com.miudelar.ResultadoExamenes"
            android:label="Consultar calificaciones de exÃ¡menes">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diego.com.miudelar.MainActivity" />
        </activity>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>